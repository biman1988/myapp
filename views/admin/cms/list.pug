extends ../layout

block content
  .row.align-items-center
    .col-6
      h1= title
    .col-6.text-right
      a.btn.btn-success(href="/admin/cms/add") Add CMS
  p#myline Welcome to #{title}
  div
    //- img(src="/images/business.png", class="img-responsive")
    table.table
      tr
        th Title
        th Description
        th Actions
      for page in cms
        tr
            td=page.post_title
            td=page.post_content
            td
                a.btn.btn-warning(href="/admin/cms/edit/"+page._id) Edit
                a.btn.btn-danger(href="/admin/cms/delete/"+page._id) Delete

